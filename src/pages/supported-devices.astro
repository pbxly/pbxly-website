        useCase: 'Home, teleworker, small office environments'
      },
      {
        name: 'Linksys PAP2T',
        type: 'Legacy Dual-Port ATA',
        image: linksysPap2t,
        features: [
          '2 independent analog FXS ports',
          '10/100 Mbps RJ‑45 auto-sensing',
          'SIP v2, RFC‑3261 compliant',
          'G.711, G.726, G.729A, G.723.1 codecs',
          'Caller ID, forwarding, conferencing, speed‑dial',
          'Web GUI, IVR menu, remote provisioning',
          'FCC, CE, cUL certifications',
          'Compact: 101 × 101 × 15 mm, ~140g'
        ],
        description: 'Compact VoIP ATA connecting two analog phones or fax machine to broadband Internet via SIP. Note: End-of-life since 2012.',
        useCase: 'Basic analog‑to‑IP deployments (legacy support only)',
