        useCase: 'Reception, manager desks, office operators'
      },
      {
        name: 'Grandstream GXP1620',
        type: 'Standard IP Phone',
        image: grandstreamGxp1620,
        features: [
          '2 SIP accounts, 2 line keys',
          '132×48 backlit LCD (~2.95")',
          '3 XML-programmable soft keys',
          '3-way local conferencing',
          'HD wideband audio, full-duplex speakerphone',
          'G.711, G.722, G.729AB, G.726, G.723, iLBC',
          'RJ9 port, EHS for Plantronics headsets',
          '2× auto-sensing 10/100 Mbps Ethernet',
          'TR-069, encrypted XML provisioning'
        ],
