---
import CallToAction from '~/components/widgets/CallToAction.astro';
import Content from '~/components/widgets/Content.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Hero from '~/components/widgets/Hero.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'PBX Services',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="Services"
    title="Transform your business communication with our comprehensive PBX solutions"
    subtitle="Explore our range of cloud-based PBX services designed to meet the unique needs of businesses of all sizes. From basic call management to enterprise-level solutions, we provide the tools you need to succeed."
    actions={[{ variant: 'primary', target: '_blank', text: 'Get Started', href: '/contact' }]}
    image={{
      src: 'https://images.unsplash.com/photo-1519389950473-47ba0277781c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1740&q=80',
      alt: 'PBXly Services',
    }}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Explore our comprehensive PBX services"
    subtitle="Discover our range of solutions designed to streamline and enhance your business communication."
    columns={3}
    items={[
      {
        title: 'Small Business PBX',
        description:
          'Perfect for businesses with 5-50 employees. Features include auto-attendant, basic call routing, voicemail, and mobile apps for professional communication.',
        icon: 'tabler:building',
      },
      {
        title: 'Enterprise PBX',
        description:
          'Advanced solutions for large organizations with complex communication needs, multi-site management, detailed analytics, and custom workflows.',
        icon: 'tabler:building-skyscraper',
      },
      {
        title: 'Call Center PBX',
        description: `Specialized for high-volume call environments with call queuing, agent monitoring, performance analytics, and quality assurance tools.`,
        icon: 'tabler:phone-call',
      },
      {
        title: 'Remote Work PBX',
        description:
          'Designed for distributed teams with mobile-first features, web-based interfaces, softphones, and collaboration tools for seamless remote communication.',
        icon: 'tabler:device-mobile',
      },
      {
        title: 'Healthcare PBX',
        description:
          'HIPAA-compliant solutions with secure messaging, emergency call handling, integration with medical systems, and patient privacy protection.',
        icon: 'tabler:stethoscope',
      },
      {
        title: 'Multi-Location PBX',
        description:
          'Centralized management for businesses with multiple offices, unified numbering, location-specific routing, and consistent communication across all sites.',
        icon: 'tabler:map-pin',
      },
      {
        title: 'Cloud Infrastructure',
        description:
          'No hardware required, automatic updates, 99.9% uptime guarantee, unlimited scalability, and enterprise-grade security.',
        icon: 'tabler:cloud',
      },
      {
        title: '24/7 Support',
        description: `Expert support team available around the clock with comprehensive documentation, video tutorials, and personalized assistance.`,
        icon: 'tabler:headset',
      },
      {
        title: 'Integration Services',
        description:
          'Seamlessly integrate with your existing CRM, helpdesk, and business tools for unified workflows and enhanced productivity.',
        icon: 'tabler:plug',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    items={[
      {
        title: 'Advanced Call Management',
        description:
          'Intelligent call routing, auto-attendant, call forwarding, and professional voicemail with email notifications.',
        icon: 'tabler:phone',
      },
      {
        title: 'Mobile Integration',
        description:
          'Take your business phone with you anywhere with our mobile apps for iOS and Android, providing full PBX functionality on any device.',
        icon: 'tabler:device-mobile',
      },
      {
        title: 'Conference Calling',
        description:
          'Host professional conference calls with multiple participants, advanced audio controls, and recording capabilities.',
        icon: 'tabler:users',
      },
      {
        title: 'Analytics & Reporting',
        description:
          'Track call metrics, monitor performance, and gain insights into your communication patterns with detailed analytics.',
        icon: 'tabler:chart-bar',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1525909002-1b05e0c869d8?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=870&q=80',
      alt: 'PBX Features',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Core Features</h3>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isAfterContent
    items={[
      {
        title: 'Cost Savings',
        description:
          'Eliminate expensive hardware costs, reduce maintenance expenses, and pay only for what you use with our flexible pricing.',
        icon: 'tabler:coin',
      },
      {
        title: 'Professional Communication',
        description:
          'Present a professional image to your customers with auto-attendant, professional voicemail, and seamless call handling.',
        icon: 'tabler:building',
      },
      {
        title: 'Scalability',
        description:
          'Start small and grow as your business expands. Add extensions instantly without hardware installation or configuration delays.',
        icon: 'tabler:arrow-up',
      },
      {
        title: 'Reliability',
        description:
          'Enjoy 99.9% uptime guarantee with enterprise-grade security, automatic backups, and redundant infrastructure.',
        icon: 'tabler:shield-check',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1552664688-cf412ec27db2?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=774&q=80',
      alt: 'PBX Benefits',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Benefits</h3>
    </Fragment>
  </Content>

  <!-- Testimonials Widget *********** -->

  <Testimonials
    title="What our customers say"
    testimonials={[
      {
        testimonial: `PBXly transformed our business communication completely. The auto-attendant and call routing features have made us sound more professional, and our customers love the seamless experience. The mobile app allows our team to work from anywhere.`,
        name: 'Emily Kennedy',
        job: 'Office Manager',
        image: {
          src: 'https://images.unsplash.com/photo-1618835962148-cf177563c6c0?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=930&q=80',
          alt: 'Emily Kennedy Image',
        },
      },
      {
        testimonial: `As a small business owner, I was worried about the complexity of PBX systems. PBXly made it incredibly simple to set up and manage. The cost savings compared to traditional phone systems are significant, and the features are exactly what we needed.`,
        name: 'Sarah Hansen',
        job: 'Small Business Owner',
        image: {
          src: 'https://images.unsplash.com/photo-1561406636-b80293969660?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=774&q=80',
          alt: 'Sarah Hansen Image',
        },
      },
      {
        testimonial: `The analytics and reporting features have given us valuable insights into our call patterns and customer interactions. PBXly's support team is exceptional - they helped us configure everything perfectly for our multi-location business.`,
        name: 'Mark Wilkinson',
        job: 'Operations Director',
        image: {
          src: 'https://images.unsplash.com/photo-1545167622-3a6ac756afa4?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=824&q=80',
          alt: 'Mark Wilkinson Image',
        },
      },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Get Started Today',
        href: '/contact',
        icon: 'tabler:phone',
      },
    ]}
  >
    <Fragment slot="title">
      Ready to&nbsp;Transform&nbsp;<br class="block sm:hidden" /><span class="sm:whitespace-nowrap">Your Communication?</span>
    </Fragment>

    <Fragment slot="subtitle">
      Join thousands of businesses that have already upgraded their communication system with PBXly. <br class="hidden md:inline" />
      Start your free trial today!
    </Fragment>
  </CallToAction>
</Layout>
