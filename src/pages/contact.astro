---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contact PBXly',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Contact" title="Let's Get Started!" />

  <ContactUs
    id="form"
    title="Ready to transform your business communication?"
    subtitle="Get in touch with our team to learn more about PBXly or start your free trial. Our experts are here to help you find the perfect solution for your business."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Name',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email',
      },
      {
        type: 'text',
        name: 'company',
        label: 'Company',
      },
      {
        type: 'tel',
        name: 'phone',
        label: 'Phone',
      },
    ]}
    textarea={{
      label: 'Tell us about your communication needs',
    }}
    disclaimer={{
      label:
        'By submitting this contact form, you acknowledge and agree to the collection of your personal information.',
    }}
    description="Our team typically responds within 2 business hours."
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="We're here to help!"
    items={[
      {
        title: 'Sales & Demo',
        description: `Chat with us to learn more about PBXly features, pricing plans, or to schedule a personalized demo of our PBX system.`,
      },
      {
        title: 'Technical Support',
        description:
          'Get help with setup, configuration, troubleshooting, or any technical questions about your PBXly system.',
      },
      {
        title: 'Account Management',
        description:
          'Assistance with billing, plan changes, user management, or any account-related questions.',
      },
      {
        title: 'Phone',
        description: '+1 (800) 123-4567',
        icon: 'tabler:headset',
      },
      {
        title: 'Email',
        description: 'hello@pbxly.com',
        icon: 'tabler:mail',
      },
      {
        title: 'Location',
        description: '1234 Business Ave, Suite 100, San Francisco, CA 94105',
        icon: 'tabler:map-pin',
      },
    ]}
  />
</Layout>
